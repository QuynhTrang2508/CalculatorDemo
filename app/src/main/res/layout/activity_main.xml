<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:text="@string/label_result"
        android:textSize="@dimen/text_size_24sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_140dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@drawable/tv_background"
        android:gravity="right"
        android:padding="@dimen/padding_20dp"
        android:text="@string/label_0"
        android:textSize="@dimen/text_size_50sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_220dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_9"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_9"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_8"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_7"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brown"
                android:onClick="onClick"
                android:text="@string/label_div"
                android:textSize="@dimen/text_size_30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_6"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_5"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_4"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btnMul"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brown"
                android:onClick="onClick"
                android:text="@string/label_mul"
                android:textSize="@dimen/text_size_30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_3"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_2"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_1"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btnSub"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brown"
                android:onClick="onClick"
                android:text="@string/label_sub"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnAC"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_AC"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btn_0"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_0"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btnEqual"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alto"
                android:onClick="onClick"
                android:text="@string/label_equal"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brown"
                android:onClick="onClick"
                android:text="@string/label_add"
                android:textSize="@dimen/text_size_30sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>